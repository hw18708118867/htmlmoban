/*css flickr style pagination*/

div.flickr { float:right; margin-right:-20px; }
div.flickr a { padding:5px 10px; background:url(../images/nav_bg.png) repeat-x 0 0; border:1px #aaa solid; -moz-border-radius:5px; -webkit-border-radius:5px; border-radius:5px; font-weight:700; font-size:14px; color:#666; text-shadow:0px 1px 0px #fff; -moz-box-shadow:0px 1px 0px #fff; -webkit-box-shadow:0px 1px 0px #fff; box-shadow:0px 1px 0px #fff; margin:0 5px; }
div.flickr a:hover { background-color:#e3e3e3; background-image:none; }
div.flickr a:avtive { -moz-box-shadow:0px 1px 3px #bbb inset; -webkit-box-shadow:0px 1px 3px #bbb inset; box-shadow:0px 1px 3px #bbb inset; }

div.meneame a:active {
	border-right: #000 1px solid; border-top: #000 1px solid; background-image: none; border-left: #000 1px solid; color: #fff; border-bottom: #000 1px solid; background-color: #0061de
}
div.flickr span.current {
	padding-right: 6px; padding-left: 6px; font-weight: bold; padding-bottom: 2px; color: #ff0084; margin-right: 3px; padding-top: 2px
}
div.flickr span.disabled {
	padding-right: 6px; padding-left: 6px; padding-bottom: 2px; color: #adaaad; margin-right: 3px; padding-top: 2px
}

.load {
	background:url(../images/loading.gif) no-repeat left center;
	padding:20px;
	color:#999;
	font-size:12px;
}

/*css page common style*/
div.ybpage { width:100%; float:right; margin:15px 0px 20px 0; display:block; padding:0; text-align: center;}
div.ybpage a, div.ybpage span {color:#fff; padding:0 14px; line-height:30px; height:30px; margin:0 7px 0 0; background:#999; display:inline-block;-moz-border-radius:3px; -webkit-border-radius:3px; border-radius:3px;  }
div.ybpage  a:hover { background-color:#ccc; }
div.ybpage .current { background-color:rgba(244,74,86,0.6);font-weight: bold;}
div.ybpage .disabled { background-color:#e3e3e3; background-image:none; border:1px #ccc solid;  }
div.ybpage input { width:22px; height:23px; border:1px #ccc solid; -moz-border-radius:5px; margin:0 5px; text-align:center; }

/*css page reply list style*/
div.paging { width:510px; float:left; margin:10px 0 0 0px; }